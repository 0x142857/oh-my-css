.dropdown
  position relative
  .dropdown-sep
    position absolute
    width 100%
    height 20px
  &:hover
    .dropdown-menu
      display block
  .dropdown-menu
    padding 5px 0
    background white
    border-radius 4px
    border 1px solid rgba(0,0,0,.1)
    margin 0
    list-style none
    padding-left 0
    display none
    position absolute
    left 0
    top 44px
    width 100%
    text-align left
    z-index 99999
    -webkit-box-shadow 0 10px 40px rgba(0,0,0,.06)
    box-shadow 0 10px 40px rgba(0,0,0,.06)
    li
      a
        display block
        padding 8px 15px
        &:hover
          color #262626
          background-color #f5f5f5
    &:before, &:after
      position absolute
      top -8px
      left 16px
      display block
      content " "
      width 0
      height 0
      border-bottom 8px solid #fff
      border-right 8px solid transparent
      border-left 8px solid transparent
    &:before
      top -9px
      border-bottom-color rgba(0,0,0,.1)