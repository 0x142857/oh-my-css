nav
  &.nav
    text-height 48px
    background #f7f7f7
    h1
      &.oh-brand
        margin 0
        background white
        text-align center
        font-size 24px
        float left
        a
          display block
          padding 0 15px
          color #3090e4
    .oh-menu
      margin 0
      padding-left 0
      list-style none
      float left
      li
        float left
        a
          color #777
          padding 0 10px
          display block
          -webkit-transition background .2s ease
          transition background .2s ease
          &:hover
            color #333
            background-color #f0f0f0
    &.nav-inverse
      background-color white
      border-bottom 1px solid #eee
      h1
        &.oh-brand
          background-color #f9f9f9
      a
        text-height 47px
      .oh-menu
        li
          a
            &:hover
              background-color #f9f9f9
  &.nav-footer
    position relative
    background white
    padding 20px 0 0 0
    margin 20px 0 0 0
    border-top 1px solid #eee
    z-index 9999
    .oh-sitename
      font-size 18px
      margin 0
    .oh-copy
      margin-top 5px
      font-size 13px
      color #ccc
    a
      color #ccc
      &:hover
        color #3090e4
        
@import './search'