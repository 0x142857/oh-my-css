.site
  .block
    margin-bottom 10px
  .star
    height 48px
    line-height 68px
  .oh-h3
    color #3090e4
    border-bottom 1px solid #eee
    padding 20px 0
    font-weight 300
  .oh-h4
    color #3090e4
    font-weight 300
    padding 24px 0 15px 0
  .heading-example
    .oh-h3
      border-bottom none
      color #333
      padding 0
      font-weight 700
    .oh-h4
      color #333
      font-weight 700
      padding 0
  .sidebar
    position relative
    padding-top 20px
    width 302px
    bottom 70px
    .anchorific
      position fixed
      width 282px
    ul
      font-size 16px
      list-style none
      padding-left 0
      li
        &.active
          >a
            color #3090e4
            border-color #3090e4
          ul
            display block
        a
          color #999
          border-right 1px solid #eee
          display block
          padding 10px 0 10px 0
          &:hover
            color #333
            border-color #333
      ul
        padding-left 10px
        display none
  .main
    padding-top 10px
    padding-bottom 30px
